<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:background="@color/app_background_dark"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DataStorage">
    <TextView
        android:id="@+id/challenge_header_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="[ C H A L L E N G E  0 7 ]"
        android:textColor="@color/neon_green"
        android:textSize="16sp"
        android:fontFamily="sans-serif-condensed"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="82dp" />

    <TextView
        android:id="@+id/challenge_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="INSECURE STORAGE"
        android:textColor="#FFFFFF"
        android:textSize="28sp"
        android:textStyle="bold"
        android:fontFamily="monospace"
        android:letterSpacing="0.05"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/challenge_header_tag"
        android:layout_marginTop="8dp"
        android:gravity="center"
        />

    <View
        android:id="@+id/title_underline"
        android:layout_width="250dp"
        android:layout_height="2dp"
        android:background="@color/neon_green"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/challenge_title"
        android:layout_marginTop="4dp" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/green_border_background"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title_underline"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0"
        android:layout_marginTop="32dp">

        <TextView
            android:id="@+id/mission_briefing_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="MISSION BRIEFING"
            android:textColor="@color/neon_green"
            android:textSize="18sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-condensed"
            android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/mission_briefing_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="We suspect this app saves user credentials locally in plain text. Login and find where the data is hidden inside the phone."
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:fontFamily="sans-serif"
            android:lineSpacingExtra="4dp"
            android:layout_marginTop="16dp"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/login_portal_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="CREDENTIALS"
            android:textColor="@color/neon_green"
            android:textSize="18sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-condensed"
            android:layout_marginTop="32dp" />

        <EditText
            android:id="@+id/username_input"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/dark_rounded_edittext"
            android:hint="Username"
            android:textColorHint="#999999"
            android:textColor="#FFFFFF"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:textSize="18sp"
            android:inputType="text"
            android:maxLines="1" />

        <EditText
            android:id="@+id/password_input"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/dark_rounded_edittext"
            android:hint="Password"
            android:textColorHint="#999999"
            android:textColor="#FFFFFF"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:textSize="18sp"
            android:inputType="textPassword"
            android:maxLines="1" />

        <CheckBox
            android:id="@+id/remember_me_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save credentials locally"
            android:textColor="#CCCCCC"
            android:buttonTint="@color/neon_green"
            android:layout_marginTop="12dp"
            android:checked="true"
            android:layout_gravity="start"
            />

        <Button
            android:id="@+id/save_button"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="16dp"
            android:backgroundTint="@color/neon_green"
            android:text="[ SAVE &amp; LOGIN ]"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold"
            android:fontFamily="monospace"
            android:layout_marginBottom="16dp"
            />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>