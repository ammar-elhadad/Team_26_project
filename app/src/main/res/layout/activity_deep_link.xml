<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background_dark"
    tools:context=".deepLink">



    <TextView
        android:id="@+id/challenge_header_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="[ C H A L L E N G E  0 3 ]"
        android:textColor="@color/neon_green"
        android:textSize="16sp"
        android:fontFamily="sans-serif-condensed"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="82dp" />

    <TextView
        android:id="@+id/challenge_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DEEP LINK "
        android:textColor="#FFFFFF"
        android:textSize="28sp"
        android:textStyle="bold"
        android:fontFamily="monospace"
        android:letterSpacing="0.05"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/challenge_header_tag"
        android:layout_marginTop="8dp"
        android:gravity="center"
        />

    <View
        android:id="@+id/title_underline"
        android:layout_width="250dp"
        android:layout_height="2dp"
        android:background="@color/neon_green"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/challenge_title"
        android:layout_marginTop="4dp" />

    <LinearLayout

        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/green_border_back"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title_underline"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0"
        android:layout_marginTop="32dp">
        <TextView
            android:id="@+id/mission_briefing_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="MISSION BRIEFING"
            android:textColor="@color/neon_green"
            android:textSize="18sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-condensed"
            android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/mission_briefing_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Can you get the token that passed via the app deepLink?"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:fontFamily="sans-serif"
            android:lineSpacingExtra="4dp"
            android:layout_marginTop="16dp"
            android:gravity="center"
            />



    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>