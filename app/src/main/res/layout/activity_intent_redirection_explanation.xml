<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background_dark"
    tools:context=".intent_redirection_explanation">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="INTENT REDIRECTION"
            android:textColor="@color/neon_green"
            android:textSize="26sp"
            android:textStyle="bold"
            android:fontFamily="monospace"
            android:letterSpacing="0.05" />

        <View
            android:layout_width="100dp"
            android:layout_height="3dp"
            android:layout_marginTop="8dp"
            android:background="@color/neon_green" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingHorizontal="24dp"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintBottom_toTopOf="@id/btnAccessLab">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="24dp">

            <!-- Explanation -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DEFINITION"
                android:textColor="@color/neon_green"
                android:textSize="14sp"
                android:textStyle="bold"
                android:fontFamily="monospace"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Intent Redirection occurs when an activity receives a nested Intent and launches it without validation. This can allow attackers to access internal app components that are not meant to be public."
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:fontFamily="sans-serif-light"
                android:lineSpacingExtra="4dp"
                android:layout_marginBottom="24dp"/>

            <!-- Vulnerable Code Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="VULNERABLE CODE SNIPPET"
                android:textColor="@color/neon_green"
                android:textSize="14sp"
                android:textStyle="bold"
                android:fontFamily="monospace"
                android:layout_marginBottom="8dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_terminal_box_thin"
                android:padding="12dp"
                android:layout_marginBottom="24dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="val incoming = intent\nval redirect = incoming.getParcelableExtra&lt;Intent&gt;(&quot;nextIntent&quot;)\nif (redirect != null) {\n    startActivity(redirect)\n}"
                    android:textColor="#E0E0E0"
                    android:textSize="13sp"
                    android:fontFamily="monospace"
                    android:lineSpacingExtra="4dp"/>
            </LinearLayout>

            <!-- Impact -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SECURITY IMPACT"
                android:textColor="@color/neon_green"
                android:textSize="14sp"
                android:textStyle="bold"
                android:fontFamily="monospace"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Access to private activities\n• Bypassing security checks\n• Unauthorized data access\n• Component hijacking"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:fontFamily="sans-serif-light"
                android:lineSpacingExtra="6dp"/>

        </LinearLayout>
    </ScrollView>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnAccessLab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:background="@drawable/bg_rounded_button_green"
        android:fontFamily="monospace"
        android:letterSpacing="0.05"
        android:paddingVertical="16dp"
        android:text="ACCESS REDIRECTION LAB"
        android:textColor="@color/app_background_dark"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>