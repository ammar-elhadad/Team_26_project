<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background_dark"
    android:padding="24dp"
    tools:context=".intent_redirection_explanation">

    <!-- Title -->
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="INTENT REDIRECTION"
        android:textColor="#FFFFFF"
        android:textSize="26sp"
        android:textStyle="bold"
        android:fontFamily="monospace"
        android:letterSpacing="0.05"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="48dp"/>

    <!-- Underline -->
    <View
        android:id="@+id/underline"
        android:layout_width="280dp"
        android:layout_height="2dp"
        android:background="@color/neon_green"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"/>

    <!-- Explanation Box -->
    <LinearLayout
        android:id="@+id/explanationBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/green_border_box"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/underline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btnAccessLab"
        android:layout_marginTop="32dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="WHAT IS INTENT REDIRECTION?"
            android:textColor="@color/neon_green"
            android:textSize="18sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-condensed"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Intent Redirection happens when an activity receives a nested Intent as data and forwards it without checking where it is coming from or where it goes.\n\nThis can let attackers bypass normal app logic and launch internal screens, services, or even non-exported components that should be protected."
            android:textColor="#FFFFFF"
            android:textSize="17sp"
            android:fontFamily="sans-serif"
            android:lineSpacingExtra="6dp"
            android:gravity="center"
            android:layout_marginTop="12dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HOW IT HAPPENS"
            android:textColor="@color/neon_green"
            android:textSize="18sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-condensed"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="24dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="When a proxy activity blindly starts a nested Intent from extras, attackers can inject another Intent pointing at an internal component.\n\nThis allows launching parts of the app that were meant to stay inaccessible."
            android:textColor="#FFFFFF"
            android:textSize="17sp"
            android:fontFamily="sans-serif"
            android:lineSpacingExtra="6dp"
            android:gravity="center"
            android:layout_marginTop="12dp"/>

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnAccessLab"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@drawable/bg_rounded_button_green"
        android:fontFamily="monospace"
        android:letterSpacing="0.05"
        android:paddingVertical="16dp"
        android:text="ACCESS REDIRECTION LAB"
        android:textColor="@color/app_background_dark"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>