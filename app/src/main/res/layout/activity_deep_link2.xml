<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background_dark"
    android:padding="24dp"
    tools:context=".deepLink">

    <!-- Title -->
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DEEP LINK ATTACKS"
        android:textColor="#FFFFFF"
        android:textSize="28sp"
        android:textStyle="bold"
        android:fontFamily="monospace"
        android:letterSpacing="0.05"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"/>

    <!-- Underline -->
    <View
        android:id="@+id/underline"
        android:layout_width="280dp"
        android:layout_height="2dp"
        android:background="@color/neon_green"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"/>

    <!-- Content Box -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/underline"
        app:layout_constraintBottom_toTopOf="@id/btnAccessLab"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/green_border_box"
            android:padding="16dp">

            <!-- Deep Link Vulnerability -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DEEP LINK VULNERABILITY"
                android:textColor="@color/neon_green"
                android:textSize="18sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-condensed"
                android:gravity="center_horizontal"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Deep Links allow external apps or browsers to open specific screens inside the application.\n\nIf sensitive Activities are exposed without authentication or validation, attackers can access protected functionality directly."
                android:textColor="#FFFFFF"
                android:textSize="17sp"
                android:gravity="center"
                android:lineSpacingExtra="6dp"
                android:layout_marginTop="12dp"/>

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/neon_green"
                android:layout_marginVertical="24dp"/>

            <!-- Deep Link Hijacking -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DEEP LINK HIJACKING"
                android:textColor="@color/neon_green"
                android:textSize="18sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-condensed"
                android:gravity="center_horizontal"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Deep Link Hijacking occurs when a malicious app registers the same Deep Link scheme or host.\n\nThis allows attackers to intercept links, redirect users, or steal data intended for the legitimate app."
                android:textColor="#FFFFFF"
                android:textSize="17sp"
                android:gravity="center"
                android:lineSpacingExtra="6dp"
                android:layout_marginTop="12dp"/>

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/neon_green"
                android:layout_marginVertical="24dp"/>

            <!-- Sensitive Data via Deep Links -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SENSITIVE DATA IN DEEP LINKS"
                android:textColor="@color/neon_green"
                android:textSize="18sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-condensed"
                android:gravity="center_horizontal"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Passing sensitive data such as tokens, credentials, or session IDs through Deep Link URLs exposes them to other apps, browsers, and system logs.\n\nAttackers can intercept and reuse this information for further compromise."
                android:textColor="#FFFFFF"
                android:textSize="17sp"
                android:gravity="center"
                android:lineSpacingExtra="6dp"
                android:layout_marginTop="12dp"/>

        </LinearLayout>
    </ScrollView>

    <!-- Access Button -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnAccessLab"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="ACCESS DEEP LINK LABS"
        android:background="@drawable/bg_rounded_button_green"
        android:textColor="@color/app_background_dark"
        android:textSize="18sp"
        android:textStyle="bold"
        android:fontFamily="monospace"
        android:letterSpacing="0.05"
        android:paddingVertical="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>